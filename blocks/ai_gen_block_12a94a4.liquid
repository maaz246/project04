{% doc %}
  @prompt
    A magazine-style editorial layout

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-layout-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: {{ block.settings.grid_gap }}px;
    align-items: start;
  }

  .ai-editorial-main-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
  }

  .ai-editorial-featured-image-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 4/3;
    overflow: hidden;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-editorial-featured-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-featured-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-editorial-featured-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-editorial-category-{{ ai_gen_id }} {
    font-size: {{ block.settings.category_font_size }}px;
    color: {{ block.settings.category_color }};
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 600;
    margin: 0;}

  .ai-editorial-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.2;
    margin: 0;
    font-weight: 700;
  }

  .ai-editorial-excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin: 0;
    opacity: 0.8;
  }

  .ai-editorial-meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: {{ block.settings.meta_font_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-editorial-author-{{ ai_gen_id }} {
    font-weight: 500;
  }

  .ai-editorial-date-{{ ai_gen_id }} {
    position: relative;
  }

  .ai-editorial-date-{{ ai_gen_id }}::before {
    content: "•";
    position: absolute;
    left: -10px;
  }

  .ai-editorial-sidebar-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.sidebar_spacing }}px;
  }

  .ai-editorial-secondary-article-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    padding-bottom: {{ block.settings.sidebar_spacing }}px;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-editorial-secondary-article-{{ ai_gen_id }}:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .ai-editorial-secondary-image-{{ ai_gen_id }} {
    width: 80px;
    height: 80px;
    flex-shrink: 0;
    overflow: hidden;
    border-radius: {{ block.settings.secondary_image_radius }}px;
  }

  .ai-editorial-secondary-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-secondary-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.secondary_image_radius }}px;
  }

  .ai-editorial-secondary-placeholder-{{ ai_gen_id }} svg {
    width: 40px;
    height: 40px;
    opacity: 0.5;
  }

  .ai-editorial-secondary-content-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-editorial-secondary-category-{{ ai_gen_id }} {
    font-size: {{ block.settings.secondary_category_size }}px;
    color: {{ block.settings.category_color }};
    text-transform: uppercase;
    letter-spacing: 0.5px;
    font-weight: 600;
    margin: 0;
  }

  .ai-editorial-secondary-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.secondary_title_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.3;
    margin: 0;
    font-weight: 600;
  }

  .ai-editorial-secondary-meta-{{ ai_gen_id }} {
    font-size: {{ block.settings.secondary_meta_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
    margin: 0;
  }

  .ai-editorial-read-more-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.body_font_size }}px;
    font-weight: 500;
    margin-top: 16px;
    transition: color 0.3s ease;
  }

  .ai-editorial-read-more-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-editorial-read-more-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .ai-editorial-read-more-{{ ai_gen_id }}:hover svg {
    transform: translateX(4px);
  }

  @media screen and (max-width: 768px) {
    .ai-editorial-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_spacing }}px;
    }

    .ai-editorial-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_font_size | times: 0.8 }}px;
    }

    .ai-editorial-secondary-article-{{ ai_gen_id }} {
      gap: 12px;
    }

    .ai-editorial-secondary-image-{{ ai_gen_id }} {
      width: 60px;
      height: 60px;
    }
  }
{% endstyle %}

<div class="ai-editorial-layout-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-editorial-grid-{{ ai_gen_id }}">
    <div class="ai-editorial-main-{{ ai_gen_id }}">
      <div class="ai-editorial-featured-image-{{ ai_gen_id }}">
        {% if block.settings.featured_image %}
          <img
            src="{{ block.settings.featured_image | image_url: width: 800 }}"
            alt="{{ block.settings.featured_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.featured_image.width }}"
            height="{{ block.settings.featured_image.height }}"
          >
        {% else %}
          <div class="ai-editorial-featured-placeholder-{{ ai_gen_id }}">
            {{ 'hero-apparel-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      {% if block.settings.featured_category != blank %}
        <p class="ai-editorial-category-{{ ai_gen_id }}">{{ block.settings.featured_category }}</p>
      {% endif %}

      {% if block.settings.featured_headline != blank %}
        <h2 class="ai-editorial-headline-{{ ai_gen_id }}">{{ block.settings.featured_headline }}</h2>
      {% endif %}

      {% if block.settings.featured_excerpt != blank %}
        <div class="ai-editorial-excerpt-{{ ai_gen_id }}">{{ block.settings.featured_excerpt }}</div>
      {% endif %}

      <div class="ai-editorial-meta-{{ ai_gen_id }}">
        {% if block.settings.featured_author != blank %}
          <span class="ai-editorial-author-{{ ai_gen_id }}">{{ block.settings.featured_author }}</span>
        {% endif %}
        {% if block.settings.featured_date != blank %}
          <span class="ai-editorial-date-{{ ai_gen_id }}">{{ block.settings.featured_date }}</span>
        {% endif %}
      </div>

      {% if block.settings.featured_link != blank %}
        <a href="{{ block.settings.featured_link }}" class="ai-editorial-read-more-{{ ai_gen_id }}">
          Read full article
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="m9 18 6-6-6-6"/>
          </svg>
        </a>
      {% endif %}
    </div>

    <div class="ai-editorial-sidebar-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign image_key = 'secondary_image_' | append: i
          assign category_key = 'secondary_category_' | append: i
          assign title_key = 'secondary_title_' | append: i
          assign author_key = 'secondary_author_' | append: i
          assign date_key = 'secondary_date_' | append: i
          assign link_key = 'secondary_link_' | append: i

          assign image = block.settings[image_key]
          assign category = block.settings[category_key]
          assign title = block.settings[title_key]
          assign author = block.settings[author_key]
          assign date = block.settings[date_key]
          assign link = block.settings[link_key]
        %}

        {% if title != blank %}
          <article class="ai-editorial-secondary-article-{{ ai_gen_id }}">
            <div class="ai-editorial-secondary-image-{{ ai_gen_id }}">
              {% if image %}
                <img
                  src="{{ image | image_url: width: 160 }}"
                  alt="{{ image.alt | escape }}"
                  loading="lazy"
                  width="{{ image.width }}"
                  height="{{ image.height }}"
                >
              {% else %}
                <div class="ai-editorial-secondary-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-editorial-secondary-content-{{ ai_gen_id }}">
              {% if category != blank %}
                <p class="ai-editorial-secondary-category-{{ ai_gen_id }}">{{ category }}</p>
              {% endif %}

              {% if link != blank %}
                <h3 class="ai-editorial-secondary-title-{{ ai_gen_id }}"><a href="{{ link }}" style="color: inherit; text-decoration: none;">{{ title }}</a>
                </h3>
              {% else %}
                <h3 class="ai-editorial-secondary-title-{{ ai_gen_id }}">{{ title }}</h3>
              {% endif %}

              {% if author != blank or date != blank %}
                <p class="ai-editorial-secondary-meta-{{ ai_gen_id }}">
                  {% if author != blank %}{{ author }}{% endif %}
                  {% if author != blank and date != blank %} • {% endif %}
                  {% if date != blank %}{{ date }}{% endif %}
                </p>
              {% endif %}
            </div>
          </article>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

